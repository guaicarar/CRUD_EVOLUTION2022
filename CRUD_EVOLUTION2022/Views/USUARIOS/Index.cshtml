@model List<CRUD_EVOLUTION2022.Models.ViewModel.UsuariosViewModel>
@{
    ViewBag.Title = "Datos Usuarios";
}

<h2>View Datos Usuarios</h2>
<div claas ="row" style="text-align:right;padding:5px;">
    <a href="~/usuarios/Nuevo" class="btn btn-primary"> Nuevo</a>
</div>
<div class=" row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Pass</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.UsuId</td>
                    <td>@oElemento.UsuNombre</td>
                    <td>@oElemento.UsuPASS</td>
                    <td>
                        <a class=" btn btn-default" href=" ~/Usuarios/Editar/@oElemento.UsuId"> Editar</a>
                        <a class=" btn btn-danger" href=" ~/Usuarios/Eliminar/@oElemento.UsuId"> Eliminar</a>
                    </td>
                    
                </tr>
            }
            </table>

    </div>
</div>

